mixin icon(nameIcon, $width, $height, $viewBox)
  if($viewBox)
    svg(class="svg-sprite-icon icon-"+nameIcon width=""+$width height=""+$height viewBox=""+$viewBox)
      use(xlink:href="img/svg/sprite.svg#"+nameIcon)
  else
   svg(class="svg-sprite-icon icon-"+nameIcon width=""+$width height=""+$height)
      use(xlink:href="img/svg/sprite.svg#"+nameIcon)

