mixin img(file, format, classImg, alttext)
  picture
    source(media="(min-width: "+(tablet / 16)+"em)"     srcset="img/"+file+"@desktope.webp" type="image/webp")
    source(media="(min-width: "+(tablet / 16)+"em)"     srcset="img/"+file+"@desktope."+format)
    source(media="(min-width: "+(mobile / 16)+"em)"     srcset="img/"+file+"@tablet.webp" type="image/webp")
    source(media="(min-width: "+(mobile / 16)+"em)"     srcset="img/"+file+"@tablet."+format)
    source(media="(max-width: "+((mobile-1) / 16)+"em)" srcset="img/"+file+"@mobile.webp" type="image/webp")
    img(class=""+classImg alt=""+alttext                    src="img/"+file+"@mobile."+format)