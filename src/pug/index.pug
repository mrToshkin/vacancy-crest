          p.logo__description ОФИЦИАЛЬНЫЙ ПРОИЗВОДИТЕЛЬ
        p.banner__text ШАПКА
    nav.header__nav
      include ../components/!nav/nav
    .header__background--mobile
    .header__body
      .container
        .header__article
          article
            h1 ОФИЦИАЛЬНЫЙ ПРОИЗВОДИТЕЛЬ 
              span Текст, текст, текст
          +img('general/header__stamp', 'png', 'header__img-stamp', 'Цены в 1,5-2 раза ниже средних по Тольятти')
          .header__free-measure--mobile
            a(href="#").free-measure__link.link-reset БЕСПЛАТНЫЙ<br>
              span ВЫЕЗД ЗАМЕРЩИКА
            p.free-measure__description ВЫЕЗЖАЕМ В ДЕНЬ ОБРАЩЕНИЯ
      .header__get-full-computation--desktope
        .get-full-computation__container.container
          a(href="#").get-full-computation__link.link-reset ПОЛУЧИТЬ ТОЧНЫЙ РАСЧЁТ И СРАВНИТЬ ЦЕНЫ

